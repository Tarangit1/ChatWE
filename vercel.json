{
  "version": 2,
  "builds": [
    {
      "src": "Backend/server.js",
      "use": "@vercel/node",
      "config": {
        "includeFiles": ["Backend/**"]
      }
    }
  ],
  "routes": [
    {
      "src": "/api/(.*)",
      "dest": "Backend/server.js"
    },
    {
      "src": "/socket.io/(.*)",
      "dest": "Backend/server.js"
    },
    {
      "src": "/(.*\\.(css|js|html|png|jpg|jpeg|gif|svg|ico))",
      "dest": "Frontend/$1"
    },
    {
      "src": "/(.*)",
      "dest": "Frontend/index.html"
    }
  ],
  "functions": {
    "Backend/server.js": {
      "maxDuration": 30
    }
  }
}